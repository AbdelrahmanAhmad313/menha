<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/main"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:alpha="0.4"
        android:src="@drawable/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/iv_google"
        android:src="@drawable/google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="44sp"
        android:id="@+id/iv_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_google"
        android:text="@string/google_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:drawablePadding="8dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:textSize="32sp"
        android:drawableStart="@drawable/address"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/iv_address"
        app:layout_constraintTop_toBottomOf="@+id/iv_details"
        android:text="@string/google_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:drawablePadding="8dp"
        android:textColor="@color/blue"
        android:layout_marginTop="8dp"
        android:textSize="32sp"
        android:drawableStart="@drawable/planet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_address"
        android:id="@+id/iv_link"
        android:text="@string/google_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>